{
  "name": "oopz-electron",
  "version": "v1.2.9",
  "description": "Oopz Electron App",
  "main": "main.js",
  "author": {
    "name": "miaoermua ",
    "email": "miaoermua@gmail.com"
  },
  "homepage": "https://web.oopz.cn/",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "cn.oopz.app",
    "productName": "oopz-electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb","pacman"],
      "icon": "icon.png",
      "category": "Network"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  }
}